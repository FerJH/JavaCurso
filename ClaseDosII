        //forma 3
        Scanner lector = new Scanner(System.in);
        int[] edades = new int[5];
        int mayor = 0;
        for (int i = 0; i < edades.length; i++) 
        
        {
            System.out.println("Decime tu edad ");
            edades[i] = lector.nextInt();
            
            if (edades[i] > mayor) 
            
            {
                
                mayor=edades[i];
                
            }
            
        }
    
        System.out.println("El mayor tiene " + mayor + " 10a√±os");
    
    }
    
    
